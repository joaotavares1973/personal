package br.com.bpss.hg.util;

import java.time.LocalDate;
import java.time.Period;
import java.time.format.DateTimeFormatter;
import java.time.format.FormatStyle;
import java.util.Locale;

public class Utils {

	
	public int getIdade(String data){
		DateTimeFormatter germanFormatter = DateTimeFormatter.ofLocalizedDate(
				FormatStyle.MEDIUM)
				.withLocale(Locale.GERMAN);

		LocalDate xmas = LocalDate.parse("08.03.1973", germanFormatter);
		System.out.println(xmas);

		final LocalDate dataAtual = LocalDate.now();
		final Period periodo = Period.between(xmas, dataAtual);
		
		return periodo.getYears();
	}
	
	  public  String gerarSenhaAleatoria() {
	        int qtdeMaximaCaracteres = 10;
	        String[] caracteres = { "a", "1", "b", "2", "4", "5", "6", "7", "8",
	                "9", "a", "b", "c", "d", "e", "f", "g", "h", "i", "j", "k",
